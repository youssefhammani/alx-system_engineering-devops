#!/usr/bin/env bash
# 4-not_found_page_404

# Check if Nginx is installed
if ! command -v nginx &> /dev/null; then
    echo "Error: Nginx is not installed. Please run 1-install_nginx_web_server first."
    exit 1
fi

# Create a custom 404 HTML page
sudo tee /usr/share/nginx/html/404.html <<EOF
<!DOCTYPE html>
<html>
<head>
    <title>404 Not Found</title>
</head>
<body>
    <h1>404 Not Found</h1>
    <p>Ceci n'est pas une page.</p>
</body>
</html>
EOF

# Create a new configuration file for custom 404 page
sudo tee /etc/nginx/sites-available/custom_404 <<EOF
server {
    listen 80 default_server;
    server_name _;

    error_page 404 /404.html;
    location = /404.html {
        root /usr/share/nginx/html;
        internal;
    }
}
EOF

# Create a symbolic link to enable the new configuration
sudo ln -s /etc/nginx/sites-available/custom_404 /etc/nginx/sites-enabled/

# Restart Nginx to apply the changes
sudo service nginx restart

echo "Nginx configured to have a custom 404 page."